# App
NODE_ENV=development
PORT=3000

# PostgreSQL Database
DATABASE_URL=postgresql://lms_user:lms_pass@localhost:5432/lms
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=lms
POSTGRES_USER=lms_user
POSTGRES_PASSWORD=lms_pass

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# MongoDB (AI Assistant)
MONGODB_URL=mongodb://lms_user:lms_pass@localhost:27017/lms_ai?authSource=admin
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=lms_ai
MONGODB_USER=lms_user
MONGODB_PASSWORD=lms_pass

# Auth
JWT_ACCESS_SECRET=change_me_access_secret
JWT_REFRESH_SECRET=change_me_refresh_secret
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email (Gmail SMTP)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=change_me_app_password
MAIL_FROM=your-email@gmail.com
MAIL_FROM_NAME=Language Learning Platform
APP_URL=http://localhost:3000
EMAIL_VERIFICATION_URL=http://localhost:3000/api/v1/auth/verify-email
RESET_PASSWORD_OTP_EXPIRES_MINUTES=10

# Cloudflare R2
R2_ENDPOINT=https://<accountid>.r2.cloudflarestorage.com
R2_BUCKET=lms-files
R2_ACCESS_KEY=change_me
R2_SECRET_KEY=change_me
R2_PUBLIC_URL=https://cdn.yourdomain.com

# AI
OPENAI_API_KEY=change_me

# Firebase Admin SDK
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"your-project-id",...}
