{
  "name": "language-learning-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "mobile": "npm run start --workspace=@lms/mobile-app",
    "backend": "npm run start:dev --workspace=@lms/backend-api",
    "admin": "npm run dev --workspace=@lms/admin-web",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\""
  },
  "devDependencies": {
    "prettier": "^3.3.0"
  },
  "dependencies": {
    "@nestjs/config": "^4.0.2",
    "dotenv": "^17.2.3"
  }
}
