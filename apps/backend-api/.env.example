# Server Configuration
PORT=3000
NODE_ENV=development

# API Configuration
CORS_ORIGIN=*

# JWT Configuration
JWT_SECRET=change-this-secret-in-production-please
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/lms_db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Kafka
KAFKA_BROKERS=localhost:9092

# Cloudflare R2 Storage
# Get these from Cloudflare R2 Dashboard > Manage R2 API Tokens
R2_ENDPOINT=https://<your-account-id>.r2.cloudflarestorage.com
R2_BUCKET=lms-files
R2_ACCESS_KEY=<your-access-key-id>
R2_SECRET_KEY=<your-secret-access-key>
# Public URL (optional, use custom domain or bucket URL)
R2_PUBLIC_URL=https://cdn.yourdomain.com
# Or: R2_PUBLIC_URL=https://lms-files.r2.cloudflarestorage.com
